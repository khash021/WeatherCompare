<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.khash.weathercompare">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddLocationActivity"
            android:label="@string/title_activity_add_location"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.khash.weathercompare.MainActivity" />
        </activity>
        <activity
            android:name=".CompareActivity"
            android:label="@string/title_activity_compare">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.khash.weathercompare.MainActivity" />
        </activity>
        <activity
            android:name=".AccuWeatherForecastActivity"
            android:label="@string/title_activity_open_weather_forecast">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.khash.weathercompare.MainActivity" />
        </activity>

        <activity
            android:name=".DarkSkyForecastActivity"
            android:label="@string/title_dark_sky_forecast">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="tech.khash.weathercompare.MainActivity" />
        </activity>

        <activity
            android:name=".OpenWeatherForecastActivity"
            android:label="@string/title_open_weather_forecast">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.khash.weathercompare.MainActivity" />
        </activity>

        <activity
            android:name=".WeatherBitForecastActivity"
            android:label="@string/title_weather_bit_forecast">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.khash.weathercompare.MainActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>